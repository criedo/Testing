<h1>New recipe</h1>

<%= error_messages_for :recipe %>

<% form_for(@recipe) do |f| %>
  <p>
    <b>Active</b><br />
    <%= f.text_field :active %>
  </p>

  <p>
    <b>Rank</b><br />
    <%= f.text_field :rank %>
  </p>

  <p>
    <b>Categories</b><br />
    <%= f.text_field :categories_id %>
  </p>

  <p>
    <b>Title</b><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <b>Instructions</b><br />
    <%= f.text_area :instructions %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', recipes_path %>

<%= form_for(:session, :url => sessions_path) do |f| %>
  <div class="field"><%= f.label :email %><br /><%= f.text_field :email %></div>
  <div class="field"><%= f.label :password %><br /><%= f.password_field :password %></div>
  <div class="actions clear_left"><%= f.submit "Sign in" %></div>
<% end %>
<div  class="clear_left">New user? <%= link_to "Sign up now!", signup_path %></div>
<div class="clear">&nbsp;</div>
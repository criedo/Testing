<% @user ||= current_user %>
<div class="stats">
  <div summary="User stats">
    <div class='float_left'><a href="<%= following_user_path(@user) %>"><span id="following" class="stat"><%= @user.following.count %> following</span></a></div>
    <div class='float_right'><a href="<%= followers_user_path(@user) %>"><span id="followers" class="stat"><%= pluralize(@user.followers.count, "follower") %></span></a></div>
    <div class="clear">&nbsp;</div>
  </div>
</div>

<%= form_for([@post, @post.comments.build]) do |f| %>
  <div class="field"><div class="label"><%= f.label :commenter %>:</div><%= f.text_field :commenter %></div>
  <div class="field"><%= f.label :body %><br /><%= f.text_area :body, :size => "55x6" %></div>
  <div class="actions"><%= f.submit %></div>
<% end %>
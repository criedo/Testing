<p><b>Url: </b><%=h @bookmark.url %></p>
<p><b>Title: </b><%=h @bookmark.title %></p>
<p><b>Description: </b><%=h @bookmark.description %></p>
<p><b>Tag: </b>
	<% for tag in @bookmark.tag_list %>
	  <%= link_to tag, :controller => "tags", :action => "show", :id => tag %>
	<% end %>
</p>
<p><b>Rate: </b><%=h @bookmark.rate %></p>
<p><br />
<%= link_to 'Edit', edit_bookmark_path(@bookmark) %> |
<%= link_to 'Back', bookmarks_path %> |
<%= link_to 'New bookmark', new_bookmark_path %>
</p>